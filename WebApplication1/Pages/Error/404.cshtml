@page
@model Error404Model
@{
    Layout = null; // or you can use your main layout
    ViewData["Title"] = "Page Not Found";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Page Not Found</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container mt-5">
        <h1>Page Not Found (404).</h1>
        <p>
            The page you're looking for doesn't exist.<br />
            Go back to <a asp-page="/Index">home page</a> or use the menu to navigate.
        </p>
    </div>
</body>
</html>
